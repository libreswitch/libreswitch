[Unit]
Description=Halon Management Interface Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/mgmtintfcfg.pid
ExecStart=/usr/bin/mgmtintfcfg --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/mgmtintfcfg.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
