+    shash_init(&wait->rows);
+    wait->timeout = timeout;
+    return wait;
+}
+
+void
+ovsdb_idl_txn_add_wait_until_unblock(struct ovsdb_idl_txn *txn,
+                                     struct ovsdb_idl_txn_wait_unblock *wait)
