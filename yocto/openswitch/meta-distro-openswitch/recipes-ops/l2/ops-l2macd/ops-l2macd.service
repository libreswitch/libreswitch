[Unit]
Description=OpenSwitch L2 MAC Management Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
ExecStartPre=/bin/rm -f /var/run/openvswitch/ops-l2macd.pid
ExecStart=/usr/bin/ops-l2macd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ops-l2macd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
